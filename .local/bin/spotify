#!/bin/bash

player_status=$(playerctl --player=spotify status)
#echo $player_status
if [ "$player_status" = "Playing" ]; then
    echo "  $(playerctl metadata artist) - $(playerctl metadata title) |"
elif [ "$player_status" = "Paused" ]; then
    echo "  $(playerctl metadata artist) - $(playerctl metadata title) |"
fi
