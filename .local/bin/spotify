#!/bin/bash

player_status=$(playerctl status)
#echo $player_status
if [ "$player_status" = "Playing" ]; then
    string="  $(playerctl metadata artist) - $(playerctl metadata title)"
    cuted_string=$(echo "$string" | cut -c -38)
    echo "$cuted_string | "
elif [ "$player_status" = "Paused" ]; then
    string="  $(playerctl metadata artist) - $(playerctl metadata title)"
    cuted_string=$(echo "$string" | cut -c -38)
    echo "$cuted_string | "
fi
